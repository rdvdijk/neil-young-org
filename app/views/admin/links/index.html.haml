= render 'form'

- collection.each do |link|
  = link_to link.title, edit_admin_link_path(link)
  - if link.verifier
    = "(#{link.verifier.name})"

- @reported_links.each do |link|
  = link.title
  = link_to t(".confirm"), confirm_broken_admin_link_path(link), :method => :put
  = link_to t(".deny"), deny_broken_admin_link_path(link), :method => :put
